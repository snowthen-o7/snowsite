---
import SeasonalEffects from '../components/SeasonalEffects.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "E-commerce & API Integration Specialist" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Alex Diaz</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&family=Newsreader:ital,wght@0,400;0,500;0,600;1,400&display=swap" rel="stylesheet">
  </head>
  <body>
    <SeasonalEffects />
    <nav>
      <a href="/" class="logo">AD</a>
      <div class="nav-links">
        <a href="/services" class:list={[{ active: currentPath === '/services/' }]}>Services</a>
        <a href="/portfolio" class:list={[{ active: currentPath.startsWith('/portfolio') }]}>Portfolio</a>
        <a href="/blog" class:list={[{ active: currentPath.startsWith('/blog') }]}>Blog</a>
        <a href="/contact" class:list={[{ active: currentPath === '/contact/' }]}>Contact</a>
      </div>
    </nav>
    
    <main>
      <slot />
    </main>
    
    <footer>
      <p>&copy; {new Date().getFullYear()} Alex Diaz</p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --bg: #0a0a0b;
    --bg-elevated: #141416;
    --bg-hover: #1c1c1f;
    --text: #e8e8e8;
    --text-muted: #888;
    --accent: #f87171;
    --accent-dim: #ef4444;
    --border: #2a2a2d;
    --font-mono: 'JetBrains Mono', monospace;
    --font-serif: 'Newsreader', Georgia, serif;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: var(--font-serif);
    background: var(--bg);
    color: var(--text);
    line-height: 1.7;
    font-size: 18px;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  a {
    color: var(--accent);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  a:hover {
    color: var(--text);
  }

  code, pre {
    font-family: var(--font-mono);
    font-size: 0.9em;
  }

  code {
    background: var(--bg-elevated);
    padding: 0.15em 0.4em;
    border-radius: 4px;
  }

  pre {
    background: var(--bg-elevated);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    border: 1px solid var(--border);
  }

  pre code {
    background: none;
    padding: 0;
  }

  h1, h2, h3, h4 {
    font-family: var(--font-mono);
    font-weight: 500;
    letter-spacing: -0.02em;
    line-height: 1.3;
  }

  h1 { font-size: 2.5rem; }
  h2 { font-size: 1.5rem; margin-top: 2.5rem; margin-bottom: 1rem; }
  h3 { font-size: 1.2rem; margin-top: 2rem; margin-bottom: 0.75rem; }

  p {
    margin-bottom: 1.25rem;
  }

  ul, ol {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  li {
    margin-bottom: 0.5rem;
  }
</style>

<style>
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    border-bottom: 1px solid var(--border);
    position: sticky;
    top: 0;
    background: var(--bg);
    z-index: 100;
  }

  .logo {
    font-family: var(--font-mono);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text);
    background: var(--accent);
    color: var(--bg);
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 6px;
  }

  .logo:hover {
    background: var(--text);
    color: var(--bg);
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    font-family: var(--font-mono);
    font-size: 0.9rem;
  }

  .nav-links a {
    color: var(--text-muted);
    transition: color 0.15s ease;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: var(--text);
  }

  main {
    flex: 1;
    width: 100%;
    max-width: 720px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  footer {
    border-top: 1px solid var(--border);
    padding: 2rem;
    text-align: center;
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  @media (max-width: 600px) {
    nav {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

    .nav-links {
      gap: 1.25rem;
      font-size: 0.85rem;
    }

    main {
      padding: 2rem 1.25rem;
    }

    h1 {
      font-size: 1.75rem;
    }
  }
</style>
