---
import SeasonalEffects from '../components/SeasonalEffects.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "E-commerce & API Integration Specialist" } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Alex Diaz</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&family=Newsreader:ital,wght@0,400;0,500;0,600;1,400&display=swap" rel="stylesheet">
  </head>
  <body>
    <SeasonalEffects />
    <nav>
      <a href="/" class="logo">AD</a>
      <div class="nav-links">
        <a href="/services" class:list={[{ active: currentPath === '/services/' }]}>Services</a>
        <a href="/portfolio" class:list={[{ active: currentPath.startsWith('/portfolio') }]}>Portfolio</a>
        <a href="/blog" class:list={[{ active: currentPath.startsWith('/blog') }]}>Blog</a>
        <a href="/contact" class:list={[{ active: currentPath === '/contact/' }]}>Contact</a>
      </div>
    </nav>
    
    <main>
      <slot />
    </main>
    
    <footer>
      <div class="footer-icons">
        <a href="mailto:alexitofrancis@gmail.com" class="footer-icon" title="Email">
