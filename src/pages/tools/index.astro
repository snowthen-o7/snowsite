---
import Layout from '../../layouts/Layout.astro';

const tools = [
  {
    title: 'CSV Toolkit',
    description: 'Compare, merge, deduplicate, and transform CSV files. All processing happens in your browser.',
    href: '/tools/csv-toolkit',
    icon: 'ðŸ“Š',
    status: 'live',
  },
  {
    title: 'Webhook Inspector',
    description: 'Capture, inspect, and debug incoming webhooks in real-time. Perfect for API development.',
    href: '/tools/webhook-inspector',
    icon: 'ðŸ”—',
    status: 'live',
  },
];
---

<Layout title="Developer Tools" description="Free browser-based tools for developers: CSV comparison, webhook debugging, and more.">
  <div class="tools-page">
    <header class="hero">
      <h1>Developer Tools</h1>
      <p class="subtitle">Free, privacy-focused tools for data and API work</p>
    </header>

    <div class="tools-list">
      {tools.map((tool) => (
        tool.status === 'live' ? (
          <a href={tool.href} class="tool-card">
            <span class="tool-icon">{tool.icon}</span>
            <div class="tool-content">
              <h2>{tool.title}</h2>
              <p>{tool.description}</p>
            </div>
            <span class="arrow">â†’</span>
          </a>
        ) : (
          <div class="tool-card disabled">
            <span class="tool-icon">{tool.icon}</span>
            <div class="tool-content">
              <h2>{tool.title} <span class="badge">Coming Soon</span></h2>
              <p>{tool.description}</p>
            </div>
          </div>
        )
      ))}
    </div>

    <section class="cta">
      <h2>Need a Custom Tool?</h2>
      <p>I build data processing and integration tools for businesses.</p>
      <a href="/contact" class="cta-button">Get in Touch</a>
    </section>
  </div>
</Layout>

<style>
  .tools-page {
    max-width: 100%;
  }

  .hero {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .hero h1 {
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--text-muted);
    font-size: 1.1rem;
    margin: 0;
  }

  .tools-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .tool-card {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    padding: 1.25rem 1.5rem;
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: all 0.15s ease;
  }

  .tool-card:hover:not(.disabled) {
    border-color: var(--accent);
    transform: translateX(4px);
  }

  .tool-card.disabled {
    opacity: 0.6;
    cursor: default;
  }

  .tool-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .tool-content {
    flex: 1;
  }

  .tool-content h2 {
    font-size: 1.1rem;
    margin: 0 0 0.25rem 0;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .tool-content p {
    color: var(--text-muted);
    font-size: 0.9rem;
    margin: 0;
    line-height: 1.5;
  }

  .badge {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.2rem 0.5rem;
    background: var(--bg);
    border: 1px solid var(--border);
    color: var(--text-muted);
    border-radius: 4px;
  }

  .arrow {
    font-size: 1.25rem;
    color: var(--accent);
    flex-shrink: 0;
    transition: transform 0.15s ease;
  }

  .tool-card:hover:not(.disabled) .arrow {
    transform: translateX(4px);
  }

  .cta {
    text-align: center;
    padding: 2rem;
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 12px;
  }

  .cta h2 {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
  }

  .cta p {
    color: var(--text-muted);
    margin-bottom: 1.25rem;
  }

  .cta-button {
    display: inline-block;
    padding: 0.6rem 1.25rem;
    background: var(--accent);
    color: var(--bg);
    font-family: var(--font-mono);
    font-size: 0.85rem;
    font-weight: 500;
    border-radius: 6px;
    transition: all 0.15s ease;
  }

  .cta-button:hover {
    background: var(--text);
    color: var(--bg);
  }

  @media (max-width: 600px) {
    .tool-card {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .arrow {
      display: none;
    }

    .tool-content h2 {
      justify-content: center;
      flex-wrap: wrap;
    }
  }
</style>
